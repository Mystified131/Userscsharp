
@{
    ViewData["Title"] = "AddUser";
}

<h2>Register</h2>

<br /><br />

      <form action='AddUser' method='POST' align="left">
          Username: <input type="text" name="username" /> <br /><br />
          Email: <input type="email" name="email" /><br /><br />
          Password: <input type="password" name="password" /><br /><br />
          (Password must be over 8 characters, at least one uppercase, one lowercase, one number and one special character.)<br /><br />
          Verify Password: <input type="password" name="verify" /><br /><br /><br />
          <input type="submit" value="Submit" /><br /><br />

      </form>

@ViewBag.error<br /><br />
<div asp-validation-summary="All"></div>

